<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/headlinesFragment">

    <fragment
        android:id="@+id/headlinesFragment"
        android:name="com.example.newshub.ui.fragment.HeadlinesFragment"
        android:label="Headlines"
        tools:layout="@layout/fragment_headlines">

        <action
            android:id="@+id/action_headlinesFragment_to_searchFragment"
            app:destination="@id/searchFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_in_right"/>
    </fragment>

    <fragment
        android:id="@+id/sourcesFragment"
        android:name="com.example.newshub.ui.fragment.SourcesFragment"
        android:label="Sources"
        tools:layout="@layout/fragment_sources" />

    <fragment
        android:id="@+id/articlesFragment"
        android:name="com.example.newshub.ui.fragment.ArticlesFragment"
        android:label="Articles"
        tools:layout="@layout/fragment_articles" />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.newshub.ui.fragment.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />
</navigation>