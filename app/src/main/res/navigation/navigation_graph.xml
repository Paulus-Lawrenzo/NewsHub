<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/categoryFragment">

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.example.newshub.ui.category.CategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category"
        >
        <action
            android:id="@+id/action_categoryFragment_to_sourceFragment"
            app:destination="@id/sourceFragment" />
    </fragment>

    <fragment
        android:id="@+id/sourceFragment"
        android:name="com.example.newshub.ui.fragment.SourceFragment"
        android:label="fragment_source"
        tools:layout="@layout/fragment_source"
        >
        <action
            android:id="@+id/action_sourceFragment_to_articleFragment"
            app:destination="@id/articleFragment" />
    </fragment>

    <fragment
        android:id="@+id/articleFragment"
        android:name="com.example.newshub.ui.fragment.ArticleFragment"
        android:label="fragment_article"
        tools:layout="@layout/fragment_article"
        >
        <action
            android:id="@+id/action_articleFragment_to_articleDetailFragment"
            app:destination="@id/articleDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/articleDetailFragment"
        android:name="com.example.newshub.ui.fragment.ArticleDetailFragment"
        android:label="fragment_article_detail"
        tools:layout="@layout/fragment_article_detail"
        />

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.newshub.ui.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search"
        />
</navigation>