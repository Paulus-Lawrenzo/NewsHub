    <style name="splashBackground">
        <item name="android:background">@color/light_orange</item>
    </style>

    <style name="CategoryFrame">
        <item name="android:background">@color/transparant_orange</item>
    </style>

    <style name="ToolbarBackground">
        <item name="android:background">@color/light_orange</item>
    </style>

    <style name="CardBackground" parent="CardView">
